# ==============================================
# Revu Environment Configuration (Docker Compose)
# ==============================================
# Copy this file to .env and fill in your actual values
# For local development: copy to backend/.env if running services natively

# MongoDB Configuration
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=revu

# Authentication & Security
JWT_SECRET=replace_with_a_long_random_secret_at_least_32_characters
JWT_EXPIRES_MIN=60

# Redis Configuration (for Docker use redis://redis:6379/0, for local use redis://localhost:6379/0)
REDIS_URL=redis://redis:6379/0
RESULT_URL=${REDIS_URL}

# Scraper Configuration
SCRAPER_MAX_REVIEWS=300
SCRAPER_MAX_PAGES=50
SCRAPE_LOCK_TTL=3600

# Summarization Backend (gemini or textrank)
SUMMARY_BACKEND=gemini
GEMINI_API_KEY=<your_gemini_api_key>
GEMINI_MODEL=gemini-1.5-flash

# Optional: Testing
TEST_AMAZON_URL=<url-to-an-amazon-product-for-manual-testing>